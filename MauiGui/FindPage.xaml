<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiGui.FindPage">

    <ScrollView>
        <Grid RowDefinitions="*,*,*,*,*"
              ColumnDefinitions="*,4*"
              BackgroundColor="White">
            <Image Source="power_logo.png"
                   Grid.Column="1"
                   Grid.RowSpan="4"
                   BackgroundColor="White"
                   HeightRequest="180"
                   Opacity="0.6" />

            <Button x:Name="Placer"
                    Text="PlacÃ©r vare"
                    Grid.Row="0"
                    Grid.Column="0"
                    Style="{StaticResource MenuKnap}"
                    Clicked="PlacerClicked" />
            <Button x:Name="Find"
                    Text="Find vare"
                    Grid.Row="1"
                    Grid.Column="0"
                    Style="{StaticResource MenuKnap}"
                    BackgroundColor="LightGrey" />
            <Button x:Name="Flyt"
                    Text="Flyt vare"
                    Grid.Row="2"
                    Grid.Column="0"
                    Style="{StaticResource MenuKnap}"
                    Clicked="FlytClicked" />
            <Button x:Name="Reoloverblik"
                    Text="Reoloverblik"
                    Grid.Row="3"
                    Grid.Column="0"
                    Style="{StaticResource MenuKnap}"
                    Clicked="ReolClicked" />
            <Button x:Name="Historik"
                    Text="Historik"
                    Grid.Row="4"
                    Grid.Column="0"
                    Style="{StaticResource MenuKnap}"
                    Clicked="HistorikClicked" />

            <Frame BorderColor="Black"
                   BackgroundColor="Transparent"
                   CornerRadius="20"
                   VerticalOptions="FillAndExpand"
                   Grid.Column="1"
                   Grid.Row="0"
                   Margin="45,20,45,20">
                <Entry x:Name="EANFelt"
                       Placeholder="EAN-Nummer..."
                       PlaceholderColor="Gray"
                       TextColor="Black"
                       FontSize="28"
                       Margin="0,-5,0,0"
                       MaxLength="13"
                       HorizontalOptions="FillAndExpand"
                       VerticalOptions="FillAndExpand" />
            </Frame>
            <Frame BorderColor="Black"
                   BackgroundColor="White"
                   CornerRadius="20"
                   VerticalOptions="FillAndExpand"
                   Grid.Column="1"
                   Grid.Row="1"
                   Margin="45,20,45,20">
                <Entry x:Name="PladsFELT"
                       Placeholder="Plads..."
                       PlaceholderColor="Gray"
                       TextColor="Black"
                       FontSize="28"
                       Margin="0,-5,0,0"
                       MaxLength="13"
                       HorizontalOptions="FillAndExpand"
                       VerticalOptions="FillAndExpand" />
            </Frame>


        </Grid>
    </ScrollView>
</ContentPage>